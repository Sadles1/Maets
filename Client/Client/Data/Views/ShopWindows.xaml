                <Ellipse  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Fill="#FF002965" Height="17" Width="17"  >
                </Ellipse>
            </Grid>
            <Button x:Name="btnmewmessage" Click="Btnmewmessage_Click" Background="White" BorderThickness="0" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Margin="0,5,154,0" Padding="0" HorizontalAlignment="Right" Height="20" Width="30" FontWeight="Bold" Grid.RowSpan="2">
                <Viewbox Width="30" Height="20">
                    <Grid Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <Line Width="75" Height="50" X1="0" Y1="0" X2="75" Y2="0" Stroke="Black" VerticalAlignment="Center" HorizontalAlignment="Center" StrokeThickness="6" />
