                                <TextBlock x:Name="telephone" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"></TextBlock>
                                <TextBlock x:Name="lbEmail" Grid.Column="0" Grid.Row="3" Text="Email" FontSize="10" Margin="5,0,0,0"  VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock x:Name="lbPhone" Grid.Column="0" Grid.Row="4" Text="Phone" FontSize="10" Margin="5,0,0,0"  VerticalAlignment="Center" Foreground="White"/>
