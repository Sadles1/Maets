                        <GradientStop Offset="1" Color="#717BD8"></GradientStop>
                    </GradientStopCollection>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="263*"/>
                <ColumnDefinition Width="155*"/>
            </Grid.ColumnDefinitions>
