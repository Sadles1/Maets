                                    <Image >
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="/Client;component/left.png" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Source" Value="/Client;component/left1.png" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button>
                                <Button  Style="{DynamicResource exitRoundCorner}" BorderThickness="0"  Panel.ZIndex="1" x:Name="Next" Click="Next_Click"  Grid.ColumnSpan="2" Grid.Column="5" Grid.Row="1" HorizontalAlignment="Right" Height="75" Width="30"  Margin="0,0,15,0" FontSize="50" Foreground="#FF292929" Background="{x:Null}">
                                    <Image >
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="/Client;component/right.png" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Source" Value="/Client;component/right1.png" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button>
                                <StackPanel  Orientation="Vertical" Grid.Column="1" Grid.Row="1" >
                                    <ListView BorderBrush="#717BD8" Background="#FF2E3784" x:Name="ProductOne"  ItemsSource="{Binding Items}" MouseLeftButtonUp="leftmouse1" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center"  >
                                        <ListView.ItemTemplate >
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{Binding MainImage}" Width="215" HorizontalAlignment="Center"  />
                                                    <TextBlock Text="{Binding Name}" Margin="0,25,0,25" HorizontalAlignment="Center" FontSize="25"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>


                                    </ListView>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Grid.Column="3" Grid.Row="1">
                                    <ListView BorderBrush="#717BD8" Background="#FF2E3784" x:Name="ProductTwo" MouseLeftButtonUp="leftmouse2" ItemsSource="{Binding Items}" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center">
                                        <ListView.ItemTemplate >
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{Binding MainImage}" Width="215" HorizontalAlignment="Center"  />
                                                    <TextBlock Text="{Binding Name}" Margin="0,25,0,25" HorizontalAlignment="Center" FontSize="25"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Grid.Column="5" Grid.Row="1">
                                    <ListView BorderBrush="#717BD8" Background="#FF2E3784" x:Name="ProductFree" MouseLeftButtonUp="leftmouse3"  Grid.Column="5" Grid.Row="1" HorizontalAlignment="Center">
                                        <ListView.ItemTemplate >
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{Binding MainImage}" Width="215" HorizontalAlignment="Center"  />
                                                    <TextBlock Text="{Binding Name}" Margin="0,25,0,25" HorizontalAlignment="Center" FontSize="25"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Grid>

                        </Grid>
                    </TabItem>
                    <TabItem Padding="5,0,5,0" Header="Библиотека" Background="White" BorderThickness="0" FontFamily="Panton Bold" Width="100" Height="45">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="8*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackPanel Visibility="Hidden" Orientation="Horizontal" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"  >
                                    <TextBox  x:Name="searchlibrary"  Margin="5" Width="200"/>
                                </StackPanel>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="White" > Ваши игры</TextBlock>
