                                            <StackPanel Orientation="Horizontal">
                                                <Border BorderBrush="#FFBA00" BorderThickness="2">

                                                    <Image Source="{Binding MainImage}" Width="50" Height="50"/>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" Margin="10,5,5,5" Foreground="White"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
