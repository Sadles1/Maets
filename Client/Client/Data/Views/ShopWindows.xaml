                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="15*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBox Panel.ZIndex="1"  x:Name="tbLoginnew" Background="Transparent" Width="200" TextChanged="TbLoginnew_TextChanged" HorizontalAlignment="Left"   Grid.ColumnSpan="2" Grid.Row="0" Text="{Binding Login}" FontSize="20"/>
                                <TextBlock x:Name="tbLoginnew_hint" Opacity="0.6" Width="200" HorizontalAlignment="Left"   Grid.ColumnSpan="2" Grid.Row="0" Text="{Binding Login}" FontSize="20"/>
                                <TextBox Panel.ZIndex="1" x:Name="lbNamenew" Width="200"  Background="Transparent" TextChanged="LbNamenew_TextChanged" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lbNamenew_hint" Opacity="0.6" Width="200" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                <TextBox Panel.ZIndex="1" x:Name="tbmailnew" Width="200" Background="Transparent" TextChanged="Tbmailnew_TextChanged" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"></TextBox>
                                <TextBlock x:Name="tbmailnew_hint" Opacity="0.6" Width="200" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"></TextBlock>
                                <TextBox Panel.ZIndex="1" x:Name="tbtelephonenew" Width="200" Background="Transparent" TextChanged="Tbtelephonenew_TextChanged" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"></TextBox>
                                <TextBlock x:Name="tbtelephonenew_hint" Opacity="0.6" Width="200"  Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"></TextBlock>
                            </Grid>

                            <Grid Grid.Column="0" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="5*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid   Visibility="Hidden" Panel.ZIndex="1" Grid.Column="0" Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*"></RowDefinition>
                                        <RowDefinition Height="2*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                </Grid>
                                <Button Style="{DynamicResource RoundCorner}"  Name="Changeprofile" Background="White" Grid.Column="1" Grid.Row="0" Click="Changeprofile_Click" Height="25" Content="Редактировать профиль" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White"></Button>
                                <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" FontSize="9" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <TextBlock Text="Вы можете " Foreground="White"></TextBlock>
                            <TextBlock Text="удалить свой аккаунт" TextDecorations="Underline" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp" Foreground="White" ></TextBlock>

                        </TextBlock>

                                <Button x:Name="Reaestfriends" Visibility="Hidden" Height="23" VerticalAlignment="Top" BorderThickness="0" Click="Button_Click_2" Background="White" Width="22" HorizontalAlignment="Right" Margin="0,0,20,0">
                                    <Grid Panel.ZIndex="3" HorizontalAlignment="Right">
                                        <TextBlock x:Name="howmanynewfriends" Panel.ZIndex="2"  FontSize="15" Margin="2,2,1,0"  Text="+1" Foreground="White"></TextBlock>
                                        <Ellipse Panel.ZIndex="1"  x:Name="newfriendswho"  Fill="#FF00912B" Height="20" Width="20"  >

                                        </Ellipse>
                                    </Grid>
                                </Button>

                            </Grid>
                            <Button Style="{DynamicResource RoundCorner}" Name="Resetpassword" Grid.Column="2" Height="20" Click="Resetpassword_Click" Width="120" VerticalAlignment="Top"  Margin="5"  Background="Transparent"  Content="Сменить пароль" Foreground="White"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Ваши друзья" VerticalAlignment="Bottom" TextAlignment="Center" FontSize="15" Foreground="White"/>
                            <ListView x:Name="Lvfriend" Grid.Row="1" Grid.Column="2" MouseLeftButtonUp="leftmousefriend" ItemsSource="{Binding Items1}" Margin="5" Background="{x:Null}" >
                                <ListView.ItemTemplate>
                                    <DataTemplate x:Name="DT">
                                        <Grid >
                                            <Border BorderThickness="1">
                                                <Image x:Name="Image2" Source="{Binding MainImage}" Height="50" Width="50" HorizontalAlignment="Left">
                                                </Image>
                                            </Border>
                                            <TextBlock x:Name="tbTest" Text="{Binding Login}" Margin="55,10,0,0"/>
                                            <TextBlock  x:Name="status" Text="{Binding status}" Margin="55,30,0,0" >

                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button Name="btnBack" Background="White" Grid.Column="1" Grid.Row="1" Click="BtnBack_Click" Content="Отмена" Visibility="Hidden" Margin="0,0,155,0" VerticalAlignment="Top" HorizontalAlignment="Right"></Button>
                            <Button Name="ChangeprofileSave" Background="White" Grid.Column="1" Grid.Row="1" Click="ChangeprofileSave_Click" Content="Сохранить изменения" Visibility="Hidden" Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Right"></Button>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="SearchUser" Padding="5,0,5,0"  Header="Поиск"  Background="White" BorderThickness="0" Height="45" Width="120"  Grid.RowSpan="2" FontFamily="Panton Bold" FontWeight="Bold" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Height="30" x:Name="searchprofile" Orientation="Horizontal">
                                <TextBlock Text="Фильтр: " Margin="5" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                                <TextBox Padding="5,0,0,0"  Template="{StaticResource TextBoxBaseControlTemplate}"  x:Name="FilterUser"  TextChanged="FilterUser_TextChanged"  Width="200" Margin="5"/>
                            </StackPanel>
                            <ListView Background="Transparent" x:Name="AllUser" MouseLeftButtonUp="AllUser_MouseLeftButtonUp"  ItemsSource="{Binding Items1}" Margin="5" Grid.Row ="1">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border BorderThickness="2" BorderBrush="#FFBA00">
                                                <Image Source="{Binding Image}"  Width="100" Height="100"/>
                                            </Border>
                                            <TextBlock Text="{Binding Login}" Margin="5" Foreground="White"/>
                                            <TextBlock x:Name="www" Text="{Binding status}" Margin="5" Foreground="White"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>

                    </TabItem>
                    <TabItem x:Name="Onlyforadmin" Padding="5,0,5,0"  Header="Модерация"  Background="White" BorderThickness="0" Height="45" Width="120"  Grid.RowSpan="2" FontFamily="Panton Bold" FontWeight="Bold" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="12*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Width="417.75" Grid.Row="0" Grid.ColumnSpan="5" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"  Text="Продукт на рассмотрении" TextAlignment="Center" Foreground="White"></TextBlock>
                            <TextBlock  Margin="417.75,0,0,0" Text="Решение" Grid.ColumnSpan="5" TextAlignment="Center" VerticalAlignment="Center" FontSize="20"  Width="417.75" Grid.Row="0" Foreground="White"></TextBlock>
                            <ListView x:Name="Moderationproduct" Grid.ColumnSpan="5" Grid.Row="1" Width="835.5" Margin="0,0,0,0" Background="{x:Null}">

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="833" Height="50">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="30"></TextBlock>
                                            <Border Background="Green" Grid.Column="1">
                                                <Viewbox x:Name="btnYes"  MouseLeftButtonUp="BtnYes_MouseLeftButtonUp"   VerticalAlignment="Top"  HorizontalAlignment="Center"  >
                                                    <TextBlock Text="Да" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                                                </Viewbox>
                                            </Border>
                                            <Border Background="Red" Grid.Column="2">
                                                <Viewbox x:Name="btnNo"  MouseLeftButtonUp="BtnNo_MouseLeftButtonUp"  VerticalAlignment="Top"  HorizontalAlignment="Center"  >
                                                    <TextBlock Text="Нет" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                                                </Viewbox>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>

        </Grid>
    </Border>
</Window>
