                        <Line Width="75" Height="50" X1="75" Y1="0" X2="75" Y2="50" Stroke="Black" VerticalAlignment="Center" HorizontalAlignment="Center" StrokeThickness="10" />
                        <Line Width="75" Height="50" X1="75" Y1="0" X2="34.3" Y2="25" Stroke="Black" VerticalAlignment="Center" HorizontalAlignment="Center" StrokeThickness="6" />
                        <Line Width="75" Height="50" X1="0" Y1="0" X2="37.5" Y2="25" Stroke="Black" VerticalAlignment="Center" HorizontalAlignment="Center" StrokeThickness="6" />
                    </Grid>
                </Viewbox>
            </Button>

            <Button Style="{DynamicResource moneyRoundCorner}" x:Name="btnMoney" Background="{x:Null}" BorderThickness="0" Grid.Row="0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Margin="0,0,92,440" Padding="0" HorizontalAlignment="Right" Height="30" Width="60"  Grid.RowSpan="2" Grid.Column="1" Foreground="White"/>
            <Button Style="{DynamicResource moneyRoundCorner}" x:Name="btnexitProfile" Click="BtnexitProfile_Click" Background="{x:Null}" BorderThickness="0" Grid.Row="0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Margin="0,0,30,440" Padding="0" HorizontalAlignment="Right" Height="30" Width="60" Content="выйти" Grid.RowSpan="2" Grid.Column="1" Foreground="White"/>

            <!--<Button Click="Button_Click_1"></Button>-->
            <Label Content="{Binding Name}" HorizontalAlignment="Center"></Label>
            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                <TabControl x:Name="mainTab" Background="Transparent" >
                    <TabItem   x:Name="Shop" Padding="15,0,15,0" Header="Магазин"  Background="#FF230000" BorderThickness="0" FontFamily="Panton Bold" Width="100" Height="45" Foreground="White" BorderBrush="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="8*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="9*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid x:Name="KorzinaCount" Visibility="Hidden" Panel.ZIndex="1" Grid.Column="2" Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"></ColumnDefinition>
                                    <ColumnDefinition Width="2*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*"></RowDefinition>
                                    <RowDefinition Height="2*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="howmanyproduct" Panel.ZIndex="1" FontSize="17" HorizontalAlignment="Center" Margin="0,1,1,0" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Text="1" Foreground="White"></TextBlock>
                                <Ellipse  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Fill="Red" Height="20" Width="20"  >
                                </Ellipse>
                            </Grid>
                            <Button Style="{DynamicResource exitRoundCorner}" x:Name="AddGame" Width="20" Height="20" Background="{x:Null}" FontSize="40" FontWeight="Bold"  Grid.Column="0" Grid.Row="0"  Click="AddGame_Click" BorderThickness="0" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White">
                                <Image >
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/Client;component/plus.png" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Source" Value="/Client;component/plus1.png" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Button>
                            <Button Style="{DynamicResource RoundCorner}" x:Name="Buy" FontSize="17" Click="Buy_Click" Grid.Column="2" Grid.Row="0" Background="{x:Null}" BorderThickness="0" Content="Корзина" Foreground="White"></Button>
                            <StackPanel x:Name="searchproduct" Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Фильтр: " Margin="10" TextAlignment="Left"/>
                                <TextBox  Template="{StaticResource TextBoxBaseControlTemplate}" Padding="5,0,0,0"  x:Name="FilterProductText" TextChanged="FilterProductText_TextChanged" Height="20" PreviewMouseDown="TextBox_PreviewMouseDown" Width="200" TextAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="5">
                                    
                                </TextBox>

                                <Button Visibility="Hidden" x:Name="btnSearchBack" Click="BtnSearchBack_Click" Background="{x:Null}" BorderThickness="0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Margin="0,5,0,0" Padding="0" HorizontalAlignment="Right" Height="30" Width="30" FontWeight="Bold">
                                    <Image >
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="/Client;component/exit.png" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Source" Value="/Client;component/exit1.png" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button>
                            </StackPanel>
                            <ListView x:Name="Lvm"  Visibility="Hidden"  SelectionChanged="Lvm_SelectionChanged" MouseLeftButtonUp="leftmouse"  ItemsSource="{Binding Items}" SelectedItem="{Binding Items}" Margin="5" Grid.ColumnSpan ="3" Grid.Row="1" Background="#FF2E3784" Foreground="White">
                                <ListView.ItemTemplate>
                                    <DataTemplate >
                                        <Grid Width="780">
                                            <Border BorderBrush="#FFBA00" BorderThickness="2">
                                            <Image x:Name="tvI" Source="{Binding Path =Image}" Width="100" Height="100" HorizontalAlignment="Left"/>
                                            </Border>
                                            <Border BorderBrush="#FFBA00" BorderThickness="2">

                                                <TextBlock x:Name="tvN" Text="{Binding Path =Name}" Margin="110,5,0,10" VerticalAlignment="Top" FontSize="20" Foreground="White"/>
                                            </Border>
                                            <Border BorderBrush="#FFBA00" BorderThickness="2">

                                                <TextBlock Text="{Binding Path =Description}" TextWrapping="Wrap" Margin="150,30,0,10" VerticalAlignment="Center" Foreground="White"/>
                                            </Border>
                                        </Grid>

                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Grid x:Name="grMainShop" Grid.ColumnSpan="3" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="7*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="7*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="7*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="17*"/>
                                    <RowDefinition Height="315*"></RowDefinition>
                                    <RowDefinition Height="17*"/>
                                </Grid.RowDefinitions>
