<Window x:Class="Client.ShopWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ShopWindows" Height="470.732" Width="739.024" Initialized="Window_Initialized">
    <Grid Margin="0,0,2,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0">
            <Image x:Name="imMainImage" HorizontalAlignment="Left" Height="87" Margin="10,10,0,0" VerticalAlignment="Top" Width="113"/>
            <Label x:Name="lbLogin" Content="Login" FontSize="20"/>
            <Label x:Name="lbName" Content="Name" FontSize="10"/>
        </StackPanel>
        <ListView x:Name="Lv" ItemsSource="{Binding Friends}" Margin="5" Grid.Column ="1">
            <ListView.ItemTemplate>
                <DataTemplate x:Name="DT">
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="Image2" Source="{Binding Image}" Width="100" Height="100"/>
                        <TextBlock x:Name="tbTest" Text="{Binding Login}" Margin="5"/>
                        <TextBlock x:Name="tbTest2" Text="{Binding Name}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btnExit"  Content="Exit" HorizontalAlignment="Left" Margin="644,408,0,0" VerticalAlignment="Top" Width="75" Click="btnExit_Click"/>
    </Grid>
</Window>
