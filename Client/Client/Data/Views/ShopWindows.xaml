                            <Image x:Name="imMainImage" Height="150" Width="150"  MouseLeftButtonUp="ImMainImage_MouseLeftButtonUp"  Grid.Column="0" Grid.Row="0" />
                            <ListView Panel.ZIndex="1" x:Name="lvimMainImage" Background="Transparent" Height="150" Width="150"  BorderThickness="0" MouseLeftButtonUp="ImMainImage_MouseLeftButtonUp" ToolTip="Кликните, чтобы изменить фотографию профиля" Grid.Column="0" Grid.Row="0" >
                                <ListView.ItemTemplate>
