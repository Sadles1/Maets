                            <Rectangle Panel.ZIndex="3" Fill="#FF00B90F"  RadiusX="3" RadiusY="3"  Height="15" Width="30"  />
                        </StackPanel>
                        <Button Style="{DynamicResource RoundCorner}" x:Name="btnBuy" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" Width="100" Content="Купить" FontSize="15" Click="BtnBuy_Click" Foreground="White"></Button>
                        <Button Style="{DynamicResource RoundCorner}" x:Name="btnkorzina" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" Width="100" Content="К корзине" FontSize="15" Visibility="Hidden" Click="Btnkorzina_Click" Foreground="White"></Button>
                        <TextBlock x:Name="price" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" Width="50" Margin="0,0,100,0" TextAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White" ></TextBlock>
                        <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" Width="100" Margin="0,0,155,0" Text="Цена:" TextAlignment="Right" FontSize="18" FontWeight="Bold" ToolTip="В стиме дешевле" Foreground="White" ></TextBlock>
                        <TextBlock Grid.Row="3" HorizontalAlignment="Left" Margin="10,0,0,0" Text="Оценка пользователей:" VerticalAlignment="Top" Foreground="White"></TextBlock>
                        <TextBlock Name="ocenka" Width="30" FontSize="20" Grid.Row="3" HorizontalAlignment="Left" Margin="145,0,0,10" Text=""  VerticalAlignment="Center" FontWeight="Bold" Foreground="White" />
                    </Grid>
                    <StackPanel Orientation="Vertical" Height="Auto"  Margin="0,420,0,0"  >
                        <WrapPanel Margin="0,29,0,0">
                            <TextBlock Text="Минимальные системные требования"  Padding="10" Width="375" FontWeight="Bold" Height="Auto" Foreground="White"></TextBlock>
                            <TextBlock Text="Рекомендуемые системные требования"  Padding="10" Height="Auto" Width="375" FontWeight="Bold" Foreground="White"></TextBlock>
                            <TextBlock Name="sysmin" Padding="10" Width="375" Height="Auto" Foreground="White"></TextBlock>

                            <TextBlock Name="sysrec" Padding="10" Width="375" Height="Auto" Foreground="White"></TextBlock>
                            <TextBlock  HorizontalAlignment="Left" Margin="10,0,0,0" Height="25" Width="700" Text=" Комментарии пользователей" VerticalAlignment="Top" Foreground="White"></TextBlock>

                        </WrapPanel>
                        <Grid  Height="350"  VerticalAlignment="Bottom" Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="6*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <TextBlock Name="mycom_hint"   Background="Transparent" Opacity="0.6" Margin="10,10,0,0" Padding="10,0,0,0" Text="Напишите, что вы думаете об этой игре"  TextWrapping="Wrap" Width="670" Height="50" HorizontalAlignment="Left" Foreground="White"></TextBlock>
                            <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" BorderBrush="White" Name="mycomm" Background="Transparent" Margin="10,10,0,0" TextChanged="Mycomm_TextChanged" Padding="10,0,0,0"  TextWrapping="Wrap" Width="670" HorizontalAlignment="Left" Height="50"  Foreground="White"></TextBox>
                            <Button Style="{DynamicResource comRoundCorner}" Panel.ZIndex="1" Name="com" Background="#FFFFC8F7" Click="Com_Click" Content="Отправить" HorizontalAlignment="Right" Height="50" Width="75" Margin="0,0,5,0" FontSize="12" FontWeight="Bold" Foreground="White"></Button>
                            <ComboBox Style="{DynamicResource ComboBoxTest2 }" VerticalAlignment="Center" Height="50" Width="60" HorizontalAlignment="Center" Name="howstar" Grid.Column="2" Margin="680,0,80,0" Background="Transparent"  BorderBrush="Transparent" FontWeight="Bold" FontSize="30" Foreground="White" >
                                <ComboBoxItem Height="30" HorizontalAlignment="Center">
                                    <TextBlock FontSize="20">1</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem Height="30" HorizontalAlignment="Center">
                                    <TextBlock FontSize="20">2</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem Height="30" HorizontalAlignment="Center">
                                    <TextBlock FontSize="20" >3</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem Height="30" HorizontalAlignment="Center">
                                    <TextBlock  FontSize="20">4</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem IsSelected="True" Height="30" HorizontalAlignment="Center">
                                    <TextBlock FontSize="20">5</TextBlock>
                                </ComboBoxItem>
                            </ComboBox>
                            <TextBlock Name="nocomments" TextAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Ещё никто не оставлял отзыв об этой игре, вы можете быть первым!" VerticalAlignment="Center" Grid.ColumnSpan ="3" Grid.Row="1" FontStyle="Italic" FontSize="30" Opacity="0.6" Foreground="White"></TextBlock>
                            <ListView x:Name="Lvcomment" BorderThickness="0"  MouseLeftButtonUp="Lvcomment_MouseLeftButtonUp"  Margin="10,5,5,5" Height="300" Grid.ColumnSpan ="3" Grid.Row="1" Background="{x:Null}">
                                <ListView.ItemTemplate>
                                    <DataTemplate >
                                        <Grid Width="780">
                                            <Image x:Name="tvI" Source="{Binding Path =Image}" Width="50" Height="50" HorizontalAlignment="Left"/>
                                            <TextBlock Name="tvN" Text="{Binding Path =Login}" Margin="60,2,0,10" VerticalAlignment="Top" FontSize="20" Foreground="White"/>
                                            <TextBlock Text="{Binding Path =Comment}" TextWrapping="Wrap" Margin="60,30,0,10" Width="600" VerticalAlignment="Center" Foreground="White"/>
                                            <Border BorderThickness="1">
                                                <TextBlock Text="{Binding Path =Star}"  TextWrapping="Wrap" Margin="750,30,0,10"  VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                                            </Border>
                                        </Grid>

                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </StackPanel>
                </Grid>

            </ScrollViewer>
        </Grid>
    </Border>
</Window>
